<%- layout("/layouts/boilerplate") %>
    <div class="row">
        <div class="col-md-8 offset-md-2 col-12">
            <form method="post" class="needs-validation" action="/listings" novalidate enctype="multipart/form-data">
                <br>
                <h1>Create new Listings</h1>
                <div class="mb-3">
                    <label for="title" class="form-label">Title</label>
                    <input type="text" placeholder="Enter a catcy line" class="form-control" name="Listing[title]"" required>
                    <div class="valid-feedback">Title looks good!</div>
                    <div class="invalid-feedback">Dont keep the title empty</div>
                </div>
                <div class=" mb-3">
                    <label for="description" class="form-label">Description</label>
                    <textarea placeholder="tell about it" type="text" class="form-control" required
                        name="Listing[description]" "></textarea>
                    <div class="invalid-feedback">please add a short description</div>
                </div>
                <div class=" mb-3">
                    <label for="image" class="form-label">Upload Image</label>
                    <input type="file" required class="form-control" name="Listing[image]" id="image" onchange="checkFileSize(this)">
                    <div id="fileSizeError" class="invalid-feedback">please upload listing image</div>
                </div>

                <div class="row">
                    <div class="mb-3 col-md-4">
                        <label for="price" class="form-label">Price</label>
                        <input placeholder="1200" class="form-control" required name="Listing[price]">
                        <div class="invalid-feedback">price should be valid</div>
                </div>
                <div class="mb-3 col-md-8">
                    <label for="country" class="form-label">Country</label>
                    <input type="text" placeholder="india" class="form-control" required name="Listing[country]">
                    <div class="invalid-feedback">please add a country</div>
                </div>
            </div>
            
            <div class="mb-3">
                <label for="location" class="form-label">Location</label>
                <input type="text" required class="form-control" name="Listing[location]">
                <div class="invalid-feedback">please add a location</div>
            </div>
            <button class="btn btn-dark add-btn">Add</button>
            <br><br>
        </form>
    </div>
    
</div>
<script>
    function checkFileSize(input) {
        var fileSizeError = document.getElementById('fileSizeError');
        if (input.files[0].size > 5000000) { // 5MB
            fileSizeError.innerHTML = 'File size exceeds the 5MB limit';
            input.value = '';
        } else {
            fileSizeError.innerHTML = 'Please upload listing image';
        }
    }
</script>