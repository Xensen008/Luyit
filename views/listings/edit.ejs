<% layout('/layouts/boilerplate') -%>
<div class="row mt-3">
    <div class="col-md-8 offset-md-2 col-12">
        <h1>Edit Listing</h1>
        <form method="post" action="/listings/<%= listing._id %>?_method=PUT"  class="needs-validation" action="/listings" novalidate enctype="multipart/form-data">
            <div class="md-3">
                <label for="title" class="form-label">Title</label>
                <input type="text" required class="form-control" name="Listing[title]", value='<%= listing.title %>'>
                <div class="valid-feedback">Title looks good!</div>
            </div>
            <div class="md-3">
                <label for="description" class="form-label">description</label>
                <textarea type="text" required class="form-control" name="Listing[description]"><%= listing.description %></textarea>
                <div class="invalid-feedback">please add a short description</div>
            </div>
            <div class="card mt-3" style="width: 10rem;">
                <div class="card-body">
                    <h6 class="card-title">Preview of original image</h6>
                    <img src="<%= originalImageUrl %>" class="card-img-top" alt="Image preview">
                </div>
                <!-- <div style="display: flex; justify-content: space-between;">
                    <img src="<%= originalImageUrl %>" class="card-img-top" alt="Image preview" style="margin-right: 30px;">
                    <img src="<%= originalImageUrl %>" class="card-img-top" alt="Image preview" style="margin-right: 30px;">
                    <img src="<%= originalImageUrl %>" class="card-img-top" alt="Image preview" style="margin-right: 30px;">
                    <img src="<%= originalImageUrl %>" class="card-img-top" alt="Image preview">
                </div> -->
            </div>
            <div class="mt-2">
                <label for="image" class="form-label">Upload New Image</label>
                <input type="file" class="form-control" name="Listing[image]", value='<%= listing.image.url %>'>
            </div>
            <div class="row">
                <div class="md-3 col-md-4">
                    <label for="price" class="form-label">price</label>
                    <input type="number"class="form-control" name="Listing[price]" required value="<%= listing.price %>">
                    <div class="invalid-feedback">price should be valid</div>
                </div>
                <div class="md-3 col-md-8">
                    <label for="country" class="form-label">country</label>
                    <input type="text" required class="form-control" name="Listing[country]", value="<%= listing.country %>">
                    <div class="invalid-feedback">please add a country</div>
                </div>
            </div>
            <div class="md-3">
                <label for="location" class="form-label">location</label>
                <input type="text" required class="form-control" name="Listing[location]", value="<%= listing.location %>">
                <div class="invalid-feedback">please add a location</div>
            </div>
            <button class="btn btn-dark mt-3 add-btn">Add</button>
        </form>
    
    </div>
</div>
    